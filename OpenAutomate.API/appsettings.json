{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Database": {
      "DefaultConnection": "Server=localhost;Database=OpenAutomateDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
    },
    "Jwt": {
      "Secret": "YourSecretKeyHere_ThisShouldBeAtLeast32CharsLong",
      "Issuer": "OpenAutomate",
      "Audience": "OpenAutomateClients",
      "AccessTokenExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7
    },
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000"]
    }
  }
}
